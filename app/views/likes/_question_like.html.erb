
<% like = @question.like_for(current_user) %>
<% if like %>
  <%= link_to fa_icon("thumbs-up"), question_like_path(@question, like),
                        remote: true,
                        method: :delete,
                        class: "like-fav-icon" %>
<% else %>
  <%= link_to fa_icon("thumbs-o-up"), question_likes_path(@question),
                        method: :post,
                        remote: true,
                        class: "like-fav-icon" %>
<% end %>
(<%= @question.likes.count %>)
